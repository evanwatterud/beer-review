<h2>New Beer</h2>

<%= simple_form_for(@beer, url: beers_path) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :name, label: 'Beer Name', required: true, autofocus: true %>
    <%= f.input :brewer, required: true %>
    <%= f.input :brewing_country, label: 'Brewing Country', required: true %>
    <%= f.input :style, required: true %>
    <%= f.input :abv, label: 'Alcohol by Volume', required: true %>
  </div>

  <div class="form-actions">
    <%= f.button :submit, "Add Beer" %>
  </div>
<% end %>
