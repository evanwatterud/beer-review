<h1>Edit Review</h1>

<%= simple_form_for([@beer, @review]) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :body, required: true, input_html: { class: 'review-box' }, label: false %>
  </div>

  <div class="form-actions">
    <%= f.button :submit, "Save Edits" %>
  </div>
<% end %>
